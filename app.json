{
  "name": "Link Shortener",
  "description": "A sample Rails application for shortening and sharing URLs.",
  "website": "https://rails-link-shortener.herokuapp.com/",
  "repository": "https://github.com/stevepolitodesign/link-shortener/",
  "scripts": {
    "postdeploy": "bundle exec rake db:migrate"
  },
  "env": {
    "LANG": "en_US.UTF-8",
    "RACK_ENV": "production",
    "RAILS_ENV": "production",
    "RAILS_LOG_TO_STDOUT": "enabled",
    "RAILS_SERVE_STATIC_FILES": "enabled",
  },
  "addons": ["heroku-postgresql", "sendgrid"]
}
